---
import BaseLayout from '../layouts/BaseLayout.astro';

const pages = await Astro.glob('../pages/pages/*.mdx');
const nonDraftPages = pages.filter((post) => !post.frontmatter.draft);

---

<BaseLayout title="Страници"
	description="Страници - Преживявания близки до смъртта">
	<h1>Страници</h1>
	<div>
		<ul>
		{nonDraftPages.map((page) => (
			<li><a href={page.frontmatter.url+"/"}>{page.frontmatter.title}</a></li>
		))}
			<li><a href="/ndes/">ПБС Списък</a></li>
			<li><a href="/ndes-todo/">ПБС за превод</a></li>
		</ul>
	</div>
</BaseLayout>

